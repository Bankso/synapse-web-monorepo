{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": false
  },
  "include": ["./src/**/*"]
}

{
  "extends": "../../shared/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "types": ["vitest/globals"]
  },
  "include": ["**/*.ts", "**/*.json"]
}

{
  "extends": ["react-app", "eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react", "react-hooks", "testing-library", "jest-dom"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/prop-types": [0],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-extra-semi": "off",
    "prefer-const": "warn"
  }
}
